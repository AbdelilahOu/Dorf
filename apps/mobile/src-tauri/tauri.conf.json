{
  "$schema": "../../node_modules/@tauri-apps/cli/schema.json",
  "productName": "dorf",
  "version": "0.1.0",
  "identifier": "com.dorf.dev",
  "build": {
    "beforeBuildCommand": "bun run build:front-end",
    "beforeDevCommand": "bun run dev:front-end",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "dorf",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
