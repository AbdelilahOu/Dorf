    "drizzle-orm": "^0.38.3",
    "hono": "^4.6.13",
    "hono-pino": "^0.7.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241112.0",
