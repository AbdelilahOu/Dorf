{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      ".wrangler/**/*",
      "crates/dorf-tauri/**/*",
      "apps/desktop/src/routeTree.gen.ts",
      ".dist/**/*",
      ".next/**/*"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useSortedClasses": {
          "level": "info",
          "options": {
            "attributes": ["className"],
            "functions": ["cn", "clsx"]
          }
        }
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useSelfClosingElements": "warn"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noUnusedImports": {
          "level": "info",
          "fix": "safe"
        }
      },
      "suspicious": {
        "noArrayIndexKey": "off"
      },
      "complexity": {
        "useLiteralKeys": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  }
}
